{
  "builds": [
    {
      "src": "api/**/*.cjs",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "docs" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.cjs" },
    { "handle": "filesystem" },
    { "src": "/(.*)",       "dest": "/index.html" }
  ]
}